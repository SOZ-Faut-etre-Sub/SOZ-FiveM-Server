{
    "compilerOptions": {
        "target": "es2016",
        "types": ["@citizenfx/server", "@citizenfx/client", "@types/node", "reflect-metadata"],
        "moduleResolution": "node",
        "module": "CommonJS",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "resolveJsonModule": true,
        "jsx": "react-jsx",
        "skipLibCheck": true,
        "allowSyntheticDefaultImports": true,
    },
    "include": [
        "src/**/*"
    ],
    "ts-node": {
        "swc": true
    }
}
